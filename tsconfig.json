{
    "compileOnSave": true,
    "compilerOptions": {
        "pretty": true,
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es2018",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "inlineSourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "strictNullChecks": true,
        "paths": {
            "*": [
                "node_modules/*"
            ]
        },
        "typeRoots": [
            "./node_modules/@types",
            "./typings"
        ]
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}